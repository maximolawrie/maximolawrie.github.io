<?xml version="1.0" encoding="UTF-8"?>
<vxml version="2.1" xmlns="http://www.w3.org/2001/06/grammar">
<meta name="Max Lawrie" content="maxlawrie@gmail.com"/>
	<form id="Char_form">
		<field name="response">
		    <!-- Define the grammar. -->
			<grammar xml:lang="en-us" root = "myrule">
				<rule id="myrule">
				  <one-of>
					<item>Alpha</item>
					<item>Bravo</item>
					<item>Charlie</item>
					<item>Delta</item>
					<item>Echo</item>
					<item>Foxtrot</item>
					<item>Golf</item>
					<item>Hotel</item>
					<item>India</item>
					<item>Juliett</item>
					<item>Kilo</item>
					<item>Lima</item>
					<item>Mike</item>
					<item>November</item>
					<item>Oscar</item>
					<item>Papa</item>
					<item>Quebec</item>
					<item>Sierra</item>
					<item>Tango</item>
					<item>Uniform</item>
					<item>Victor</item>
					<item>Whiskey</item>
					<item>X-ray</item>
					<item>Yankee</item>
					<item>Zulu</item>
					<item>Zero</item>
					<item>One</item>
					<item>Two</item>
					<item>Three</item>
					<item>Four</item>
					<item>Five</item>
					<item>Six</item>
					<item>Seven</item>
					<item>Eight</item>
					<item>Nine</item>
				  </one-of>
				</rule>
			</grammar>
		
		<prompt>
            <value expr="question"/>
        </prompt>

        <filled>
			<if cond="response == 'Alpha'">
			    <var name="character" expr="'a'"/>
			<elseif cond="response == 'Bravo'">
				<var name="character" expr="'b'"/>
			<elseif cond="response == 'Charlie'">
				<var name="character" expr="'c'"/>
			<elseif cond="response == 'Delta'">
				<var name="character" expr="'d'"/>
			<elseif cond="response == 'Echo'">
				<var name="character" expr="'e'"/>
			<elseif cond="response == 'Foxtrot'">
				<var name="character" expr="'f'"/>
			<elseif cond="response == 'Hotel'">
				<var name="character" expr="'h'"/>
			<elseif cond="response == 'India'">
				<var name="character" expr="'i'"/>
			<elseif cond="response == 'Juliett'">
				<var name="character" expr="'j'"/>
			<elseif cond="response == 'Kilo'">
				<var name="character" expr="'k'"/>
			<elseif cond="response == 'Lima'">
				<var name="character" expr="'l'"/>
			<elseif cond="response == 'Mike'">
				<var name="character" expr="'m'"/>
			<elseif cond="response == 'November'">
				<var name="character" expr="'n'"/>
			<elseif cond="response == 'Oscar'">
				<var name="character" expr="'o'"/>
			<elseif cond="response == 'Papa'">
				<var name="character" expr="'p'"/>
			<elseif cond="response == 'Quebec'">
				<var name="character" expr="'q'"/>
			<elseif cond="response == 'Sierra'">
				<var name="character" expr="'s'"/>
			<elseif cond="response == 'Tango'">
				<var name="character" expr="'t'"/>
			<elseif cond="response == 'Uniform'">
				<var name="character" expr="'u'"/>
			<elseif cond="response == 'Victor'">
				<var name="character" expr="'v'"/>
			<elseif cond="response == 'Whiskey'">
				<var name="character" expr="'w'"/>
			<elseif cond="response == 'X-ray'">
				<var name="character" expr="'x'"/>
			<elseif cond="response == 'Yankee'">
				<var name="character" expr="'y'"/>
			<elseif cond="response == 'Zulu'">
				<var name="character" expr="'z'"/>
			<elseif cond="response == 'Zero'">
				<var name="character" expr="'0'"/>
			<elseif cond="response == 'One'">
				<var name="character" expr="'1'"/>
			<elseif cond="response == 'Two'">
				<var name="character" expr="'2'"/>
			<elseif cond="response == 'Three'">
				<var name="character" expr="'3'"/>
			<elseif cond="response == 'Four'">
				<var name="character" expr="'4'"/>
			<elseif cond="response == 'Five'">
				<var name="character" expr="'5'"/>
			<elseif cond="response == 'Six'">
				<var name="character" expr="'6'"/>
			<elseif cond="response == 'Seven'">
				<var name="character" expr="'7'"/>
			<elseif cond="response == 'Eight'">
				<var name="character" expr="'8'"/>
			<elseif cond="response == 'Nine'">
				<var name="character" expr="'9'"/>
			<else/>
				<var name="character" expr="'A'"/>
			</else>
			</if>
			<return namelist="response character"/>
        </filled>
      </field>
  </form>
</vxml>
			